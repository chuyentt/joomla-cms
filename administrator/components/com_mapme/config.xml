<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset label="COM_MAPME" name="mapme">
        <field name="maptypeid" default="roadmap" type="list" label="COM_MAPME_FORM_LBL_MAPTYPEID" description="COM_MAPME_FORM_DESC_MAPTYPEID" hint="COM_MAPME_FORM_LBL_MAPTYPEID">
  <option value="roadmap">Default map</option>
  <option value="satellite">Satellite images</option>
  <option value="hybrid">Mixture view</option>
  <option value="terrain">Terrain info</option>
</field>
<field name="zoom" filter="safehtml" type="text" default="14" label="COM_MAPME_FORM_LBL_ZOOM" description="COM_MAPME_FORM_DESC_ZOOM" hint="COM_MAPME_FORM_LBL_ZOOM"/>
<field name="center" filter="safehtml" type="text" default="21.0730547,105.7768418" label="COM_MAPME_FORM_LBL_CENTER" description="COM_MAPME_FORM_DESC_CENTER" hint="COM_MAPME_FORM_LBL_CENTER"/>
<field name="styles" filter="raw" type="textarea" default="[]" label="COM_MAPME_FORM_LBL_STYLES" description="COM_MAPME_FORM_DESC_STYLES" hint="COM_MAPME_FORM_LBL_STYLES"/>
<field name="header_height" filter="safehtml" type="text" default="75" label="COM_MAPME_FORM_LBL_HEADER_HEIGHT" description="COM_MAPME_FORM_DESC_HEADER_HEIGHT" hint="COM_MAPME_FORM_LBL_HEADER_HEIGHT"/>
<field name="height" filter="safehtml" type="text" default="auto" label="COM_MAPME_FORM_LBL_HEIGHT" description="COM_MAPME_FORM_DESC_HEIGHT" hint="COM_MAPME_FORM_LBL_HEIGHT"/>
<field name="map_api_key" filter="safehtml" type="text" default="YOUR_API_KEY" label="COM_MAPME_FORM_LBL_MAP_API_KEY" description="COM_MAPME_FORM_DESC_MAP_API_KEY" hint="COM_MAPME_FORM_LBL_MAP_API_KEY"/>
<field name="firebase_config" filter="raw" type="textarea" default="{}" label="COM_MAPME_FORM_LBL_FIREBASE_CONFIG" description="COM_MAPME_FORM_DESC_FIREBASE_CONFIG" hint="COM_MAPME_FORM_LBL_FIREBASE_CONFIG"/>

    </fieldset>

    <fieldset name="permissions" description="JCONFIG_PERMISSIONS_DESC" label="JCONFIG_PERMISSIONS_LABEL">
        <field name="rules" type="rules" component="com_mapme" class="inputbox" filter="rules" validate="rules" label="JCONFIG_PERMISSIONS_LABEL" section="component" />
	</fieldset>

    <fieldset name="component">
        <field name="save_history" type="radio" class="btn-group btn-group-yesno" default="0" label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL" description="JGLOBAL_SAVE_HISTORY_OPTIONS_DESC">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field name="history_limit" type="text" filter="integer" label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL" description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC" default="5"/>
    </fieldset>
</config>
